<div class="justify-content-center align-items-center"> <!-- Container with CSS flexbox classes to center its children horizontally and vertically -->  
  <div class="login-card"> <!-- Container for the login form with additional styling -->
    <h2 class="page-title">Login</h2> <!-- Heading for the login section -->
    <form class="form login-form"> <!-- Form for user login -->
      <div class="form-group">
        <label for="username-login" class="text-light p-3">Username:</label> <!-- Added label for username input -->
        <input class="form-input" type="text" id="username-login" /> <!-- Added input field for entering username -->
      </div>
      <div class="form-group">
        <label for="email-login" class="text-light p-3">Email:</label> <!-- Label for email input -->
        <input class="form-input" type="text" id="email-login" /> <!-- Input field for entering email -->
      </div>
      <div class="form-group">
        <label for="password-login" class="text-light p-3">Password:</label>
        <!-- Label for password input -->
        <input class="form-input text-light" type="password" id="password-login" /> <!-- Input field for entering password -->
      </div>
      <div class="form-group"><!-- Container for form submission buttons -->
        <button class="btn btn-primary" type="submit">Login</button> <!-- Button to submit the login form -->
        <a class="signup-link" href="/signup" target="_blank">Sign Up</a> <!-- Link to navigate to the signup page -->
      </div>
    </form><!-- End of login form -->
  </div><!-- End of login card container -->
</div><!-- End of container for horizontal and vertical alignment -->
<script src="./js/login.js"></script> <!-- Include the JavaScript file for login-related functionality -->
