<div class="justify-content-center align-items-center"> <!-- Container with CSS flexbox classes to center its children horizontally and vertically -->  
  <div class="signup-card"> <!-- Container for the login form with additional styling -->
    <h2 class="page-title">Sign Up</h2> <!-- Heading for the login section -->
    <form class="form signup-form"> <!-- Form for user login -->
      <div class="form-group">
        <label for="username-signup" class="text-light p-3">Username:</label> <!-- Added label for username input -->
        <input class="form-input" type="text" id="username-signup" /> <!-- Added input field for entering username -->
      </div>
      <div class="form-group">
        <label for="email-signup" class="text-light p-3">Email:</label> <!-- Label for email input -->
        <input class="form-input" type="text" id="email-signup" /> <!-- Input field for entering email -->
      </div>
      <div class="form-group">
        <label for="password-signup" class="text-light p-3">Password:</label>
        <!-- Label for password input -->
        <input class="form-input" type="password" id="password-signup" /> <!-- Input field for entering password -->
      </div>
      <div class="form-group">
        <label for="experience-signup" class="text-light p-3">Experience Level:</label> <!-- Label for email input -->
        <select class="form-input" id="experience-signup" /> <!-- Input field for entering email -->
          <option value="novice">Novice</option>
          <option value="enthusiast">Enthusiast</option>
          <option value="professional">Professional</option>
        </select>
      </div>
      <div class="form-group"><!-- Container for form submission buttons -->
        <button class="btn btn-primary" type="submit">Sign Up</button> <!-- Button to submit the login form -->
        <a class="login-link" href="/login" target="_blank">Login</a> <!-- Link to navigate to the signup page -->
      </div>
    </form><!-- End of login form -->
  </div><!-- End of login card container -->
</div><!-- End of container for horizontal and vertical alignment -->
<script src="./js/signup.js"></script> <!-- Include the JavaScript file for login-related functionality -->
