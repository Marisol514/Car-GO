<h2 class="card-header text-light">Edit Post</h2>
<form class="card-body edit-post-form">
  <div class="form-row">
    <label for="post-title" class="form-label">Title</label>
    <input name="post-title" type="text" class="form-input form-control bg-white" value="{{post.title}}"/>
  </div>

  <div class="form-row pb-3">
    <label class="form-label pt-3" for="content"> Please update your post</label>
    <input name="content" type="text" class="form-input form-control bg-white" value="{{post.content}}"/>
  </div>
  <button type="submit" class="submit-btn btn btn-danger">Update Post</button>
  <button type="button" class="delete-post-btn btn-danger btn">Delete Post</button>
</form>

<script src="/js/edit-delete-post.js"></script>
