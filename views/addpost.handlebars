<main>
    <div class="card bg-dark">
        <h3 class="card-header text-light">New Post</h3>
        <form class="card-body" id="add-post-form">
            <div class="form-floating mb-3 border-bottom"> <!-- Add border-bottom class -->
                <input type="text" id="post-title" name="post-title" class="form-control border-0" autofocus="true" placeholder="Title"/>
                <!-- Add border-0 class -->
                <label for="post-title" class="form-label">Title</label>
            </div>

            <div class="form-floating">
                <textarea id="text" name="text" class="form-control border-0" style="height: 300px" autofocus="true" placeholder="What's on your mind?"></textarea>
                <!-- Add border-0 class -->
                <label class="form-label" for="text">Content</label>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Create Post</button>
        </form>
    </div>
</main>
