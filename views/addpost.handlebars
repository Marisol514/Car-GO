<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h3 class="text-light">Create Post:</h3>

            <form class="form new-post-form" method="POST" action="/dashboard">
                <div class="mb-3">
                    <label for="post-title" class="form-label">Post Title:</label>
                    <input class="form-control" type="text" id="post-title" name="title" />
                </div>
                <div class="mb-3">
                    <label for="post-content" class="form-label">Post Content:</label>
                    <textarea class="form-control" id="post-content" name="content"></textarea>
                </div>
                <div class="mb-3">
                    <label for="post-image" class="form-label">Post Image:</label>
                    <img id="uploadedimage" src="" />
                    <button type="button" id="upload_widget" class="btn btn-primary">Upload Photo</button>
                </div>
                <div class="mb-3 text-center">
                    <button type="submit" class="btn btn-primary mx-auto">Create New Post</button>
                </div>
            </form>
        </div>
    </div>

    {{#if posts.length}}
    <div class="col-md-6 mx-auto post-list">
        <h3 class="text-light">Your Posts:</h3>

        {{#each posts as |post|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/api/posts/{{post.id}}">{{post.title}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
<script src="/js/add-post.js"></script>
