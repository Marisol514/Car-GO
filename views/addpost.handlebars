<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
    <!-- Display a welcome message with the user's name -->
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>
    <!-- Display a heading for creating a new post -->

    <form class="form new-post-form">
      <!-- Form for creating a new post -->
      <div class="form-group">
        <label for="post-title">Post Title:</label>
        <!-- Label for post title input field -->
        <input class="form-input" type="text" id="post-title" name="post-title" />
        <!-- Input field for post title -->
      </div>
      <div class="form-group">
        <label for="post-content">Post Content:</label>
        <!-- Label for post content textarea -->
        <textarea class="form-input" id="post-content" name="post-content"></textarea>
        <!-- Textarea for post content -->
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <!-- Button to submit the form and create the post -->
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <!-- Check if there are posts available -->
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>
    <!-- Display a heading for current posts -->

    {{#each posts as |post|}}
    <!-- Iterate over each post -->
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
        <!-- Display post title as a link to the individual post page -->
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
        <!-- Button to delete the post -->
      </div>
    </div>
    {{/each}}
    <!-- End of post iteration -->
  </div>
  {{/if}}
  <!-- End of check for available posts -->
</div>

<script src="./js/profile.js"></script>
<!-- Include the JavaScript file for profile-related functionality -->