{{#each posts as |post| }}
  <div class="row align-center mb-5">
    <div class="col-md-6">
      <h2>{{ post.dataValues.title }}</h2>
      <!-- Render user's name inside an <h2> element -->
        <p> {{ post.dataValues.content }}</p>
        <p> Posted by {{ post.user.dataValues.username }} on {{ format_date post.dataValues.date_created }}</p>
    </div>
  </div>
  
<h2>Comments:</h2>
{{#if post.comments.length}}
    <ul>
        {{#each post.comments as |comment|}}
        <li>
            <div class="comment-details">
                <p>{{ comment.comment_text }}</p>
                <p>Comment by {{ comment.user.username }}</p>
            </div>
        </li>
        {{/each}}
    </ul>
{{else}}
    <p>No comments available.</p>
{{/if}}
    
{{/each}}


