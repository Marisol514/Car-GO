<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
    <!-- Display a welcome message with the user's name -->
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <!-- Single Post Section -->
    <div class="post-section" id="single-post-container">
      <!-- Mustache Template for Single Post -->
      <script id="single-post-template" type="text/x-mustache">
        <div class="post">
          <h3>{{title}}</h3>
          <!-- Display post title -->
          <p>{{content}}</p>
          <!-- Display post content -->
          <button class="btn btn-sm btn-danger delete-post" data-id="{{id}}">DELETE</button>
          <!-- Button to delete the post -->
        </div>
      </script>
      <!-- End of Mustache Template for Single Post -->
    </div>
    <!-- End of Single Post Section -->
  </div>

  <!-- Other Content -->
  <div class="col-md-6">
    <!-- Other content (if any) -->
  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/4.2.0/mustache.min.js"></script>
<script src="./js/profile.js"></script>
<!-- Include the JavaScript file for profile-related functionality -->
